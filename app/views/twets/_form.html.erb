
<%= simple_form_for(@twet) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :twet, label: "Twet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new twet...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
  <% end %>